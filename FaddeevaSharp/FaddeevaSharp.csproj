<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<VersionPrefix>0.1.0</VersionPrefix>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>ShInUeXx</Authors>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/shinuexx/FaddeevaSharp.git</RepositoryUrl>
    <PackageTags>faddeeva complex error functions</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageProjectUrl>https://github.com/shinuexx/FaddeevaSharp.git</PackageProjectUrl>
    <Description>Pure C# Faddeeva algorithm</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
